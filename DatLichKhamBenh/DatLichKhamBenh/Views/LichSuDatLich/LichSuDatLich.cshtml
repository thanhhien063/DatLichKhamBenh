@model IEnumerable<DatLichKhamBenh.Models.datlichhen>
<!DOCTYPE html>

<html>
<head>
    <title>@Page.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Responsive Medical Template">
    <meta name="keywords" content="Medical, medihere, Doctor, HTML5, Bootstrap, Popular, custom, clinic, health-care, template, theme" />
    <meta name="author" content="Mostafiz">
    <!-- Favicon -->
    <link rel="icon" href=@Url.Content("/Content/images/favicon.ico")>
    <title>Medihere - Responsive Bootstrap &amp; HTML Medical Template</title>
    <!-- Stylesheets -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/font-awesome.min.css")>
    <!-- bootstrap css -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/bootstrap.min.css")>
    <!-- preloader css -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/introLoader.min.css")>
    <!-- animate css -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/animate.css") type="text/css" />
    <!-- owl carousel styles -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/owl.carousel.css") type="text/css" />
    <!-- date picker css -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/datepicker.css")>
    <!-- main style -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/style.css")>
    <!-- google fonts -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700,800,600' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,300,500' rel='stylesheet' type='text/css'>
    <!-- modernizr -->
    <script src=@Url.Content("/Content/js/modernizr.js")></script>
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <main id="wrapper">
        <!-- // Preloader markup -->
        <div id="element" class="introLoading"></div>
        @Html.Partial("_LogonHeader")
        <!-- Blog page banner -->
        <section id="banner" class="banner text-center">
            <div class="container">
                <div class="row">
                    <h1>Lịch sử đặt lịch khám</h1>
                    <p>Huỷ lịch bất cứ lúc nào</p>
                </div>
            </div>
        </section>
        <!-- banner ends -->
        <!-- appointment section -->

        <section class="appointment text-center" id="appointment">
            <div class="container abcontainer text-left">
                <div class="page-nav">
                    <span class="heading-nav"><a href="/LogonPatient/LogonPatient">Trang chủ</a> | Lịch sử đặt lịch khám</span>
                </div>
            </div>

            <div class="container">

                <div class="row">
                    <h2>Lịch sử đặt khám bệnh</h2>
                    <p></p>                 
                    <div id="page-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="page-header">Danh sách lịch khám</h1>
                            </div>

                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">Thông tin bệnh nhân</div>

                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <table width="100%"
                                               class="table table-striped table-bordered table-hover"
                                               id="dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Mã khám bệnh</th>
                                                    <th>Họ và tên</th>
                                                    <th>Ngày hẹn</th>
                                                    <th>Triệu chứng ban đầu</th>
                                                    <th>Trạng thái</th>
                                                    <th>Thao tác</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr class="gradeA">
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.maKhamBenh)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.hoVaTen)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ngayHen)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.noiDung)
                                                        </td>
                                                        <td>
                                                            @if (item.trangThai == "0")
                                                            {
                                                                <h5>Lịch hẹn mới</h5>
                                                            }
                                                            else
                                                            { <h5>Đã khám</h5>}
                                                        </td>

                                                        <td>

                                                           

                                                            @Html.ActionLink(" ", "XoaLichSuDatLich", new { id = item.maKhamBenh }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })

                                                        </td>
                                                    </tr>}
                                            </tbody>

                                        </table>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                    </div>                    
                </div>
            </div>
        </section>

        <!-- appointment seciton ends -->
        @Html.Partial("_Footer")
    </main>
    <!-- main page ends -->
    <!-- Jquery and javascript files -->
    <script type="text/javascript" src=@Url.Content("/Content/js/jquery-2.1.1.js")></script>
    <!-- date picker js -->
    <script type="text/javascript" src=@Url.Content("/Content/js/datepicker.js")></script>
    <!-- bootstrap 3.3.6 js -->
    <script type="text/javascript" src=@Url.Content("/Content/js/bootstrap.min.js")></script>
    <!-- owl carousel js-->
    <script type="text/javascript" src=@Url.Content("/Content/js/owl.carousel.js")></script>
    <!-- smooth scroll js -->
    <script type="text/javascript" src=@Url.Content("/Content/js/smoothscroll.js")></script>
    <!-- preloader js -->
    <script type="text/javascript" src=@Url.Content("/Content/js/jquery.introLoader.pack.min.js")></script>
    <!-- custom scripts -->
    <script type="text/javascript" src=@Url.Content("/Content/js/script.js")></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
