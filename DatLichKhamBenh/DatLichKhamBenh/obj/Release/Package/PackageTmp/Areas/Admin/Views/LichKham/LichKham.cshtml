@model IEnumerable<DatLichKhamBenh.Models.datlichhen>
<!DOCTYPE html>
<html>
<head>
    <title>Danh sách lịch khám</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap Core CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/bootstrap/css/bootstrap.min.css")
          rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/metisMenu/metisMenu.min.css")
          rel="stylesheet">

    <!-- Custom CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/dist/css/sb-admin-2.css")
          rel="stylesheet">

    <!-- DataTables CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css")
          rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.css")
          rel="stylesheet">

    <!-- Custom Fonts -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/font-awesome/css/font-awesome.min.css")
          rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        @Html.Partial("_MenuAdmin")

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Danh sách lịch khám</h1>
                </div>
                
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Thông tin bệnh nhân</div>

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%"
                                   class="table table-striped table-bordered table-hover"
                                   id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Mã khám bệnh</th>
                                        <th>Họ và tên</th>
                                        <th>Ngày hẹn</th>
                                        <th>Triệu chứng ban đầu</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="gradeA">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.maKhamBenh)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.hoVaTen)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ngayHen)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.noiDung)
                                            </td>
                                            <td>
                                                @if (item.trangThai == "0")
                                                {
                                                    <h5>Lịch hẹn mới</h5>
                                                }
                                                else
                                                { <h5>Đã khám</h5>}
                                            </td>

                                            <td>

                                                @Html.ActionLink(" ", "Edit", new { id = item.maKhamBenh }, new { @class = "btn btn-primary glyphicon glyphicon-edit" })

                                                @Html.ActionLink(" ", "Details", new { id = item.maKhamBenh }, new { @class = "btn btn-success glyphicon glyphicon-zoom-in" })

                                                @Html.ActionLink(" ", "Delete", new { id = item.maKhamBenh }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })

                                            </td>
                                        </tr>}
                                </tbody>

                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src=@Url.Content("/Areas/Admin/Content/vendor/jquery/jquery.min.js")></script>

    <!-- Bootstrap Core JavaScript -->
    <script src=@Url.Content("/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.min.js")></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src=@Url.Content("/Areas/Admin/Content/vendor/metisMenu/metisMenu.min.js")></script>

    <!-- DataTables JavaScript -->
    <script src=@Url.Content("/Areas/Admin/Content/vendor/datatables/js/jquery.dataTables.min.js")></script>
    <script src=@Url.Content("/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js")></script>
    <script src=@Url.Content("/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.js")></script>

    <!-- Custom Theme JavaScript -->
    <script src=@Url.Content("/Areas/Admin/Content/dist/js/sb-admin-2.js")></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>

</body>

</html>
