@model DatLichKhamBenh.Models.datlichhen
<!DOCTYPE html>
<html>
<head>
    <title>Thông tin chi tiết</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap Core CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/bootstrap/css/bootstrap.min.css")
          rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/metisMenu/metisMenu.min.css")
          rel="stylesheet">

    <!-- Custom CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/dist/css/sb-admin-2.css")
          rel="stylesheet">

    <!-- DataTables CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css")
          rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.css")
          rel="stylesheet">

    <!-- Custom Fonts -->
    <link href=@Url.Content("/Areas/Admin/Content/vendor/font-awesome/css/font-awesome.min.css")
          rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>

<body>

    <div id="wrapper">
        <!-- Navigation -->
        @Html.Partial("_MenuAdmin")

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header text-center">Xóa lịch khám</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                @using (Html.BeginForm())
                {
                    <div class="col-sm-2"></div>
                    <div class="col-lg-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 style="color: red;" class="panel-title text-center">Thông tin lịch khám</h3>
                            </div>

                            @Html.AntiForgeryToken()
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-lg-1"></div>
                                    <div class="col-lg-10">

                                        <form role="form">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <div class="form-group">
                                                <label>Mã lịch khám:</label>
                                                @Html.DisplayFor(model => model.maKhamBenh)
                                            </div>
                                            <div class="form-group">
                                                <label>Họ và tên:</label>
                                                @Html.DisplayFor(model => model.hoVaTen)
                                            </div>
                                            <div class="form-group">
                                                <label>Email:</label>
                                                @Html.DisplayFor(model => model.email)
                                            </div>

                                            <div class="form-group">
                                                <label>Số điện thoại:</label>
                                                @Html.DisplayFor(model => model.sdt)
                                            </div>

                                            <div class="form-group">
                                                <label>Ngày/tháng/năm sinh:</label>
                                                @Html.DisplayFor(model => model.ngayThangNamSinh)
                                            </div>

                                            <div class="form-group">
                                                <label>Giới tính:</label>@if (Model.gioiTinh == "0")
                                                {
                                                    <h5>Nữ</h5>
                                                }
                                                else
                                                { <h5>Nam</h5>}
                                            </div>

                                            <div class="form-group">
                                                <label>Ngày hẹn:</label>
                                                @Html.DisplayFor(model => model.ngayHen)
                                            </div>
                                            <div class="form-group">
                                                <label>Triệu chứng ban đầu:</label>
                                                @Html.DisplayFor(model => model.noiDung)
                                            </div>
                                            <div class="form-group">
                                                <label>Trạng thái:</label>
                                                @if (Model.trangThai == "0")
                                                {
                                                    <p>Lịch hẹn mới</p>
                                                }
                                                else
                                                { <p>Đã khám</p>}
                                            </div>
                                            <div class="form-group">
                                                <button class="btn btn-success"><a href="@Url.Action("LichKham", "LichKham")">Quay về</a></button>
                                                <input type="submit" value="Xóa" class="btn btn-danger" />
                                            </div>
                                        </form>
                                    </div>

                                </div>

                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                }
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src=@Url.Content("/Areas/Admin/Content/vendor/jquery/jquery.min.js")></script>

    <!-- Bootstrap Core JavaScript -->
    <script src=@Url.Content("/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.min.js")></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src=@Url.Content("/Areas/Admin/Content/vendor/metisMenu/metisMenu.min.js")></script>

    <!-- DataTables JavaScript -->
    <script src=@Url.Content("/Areas/Admin/Content/vendor/datatables/js/jquery.dataTables.min.js")></script>
    <script src=@Url.Content("/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js")></script>
    <script src=@Url.Content("/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.js")></script>

    <!-- Custom Theme JavaScript -->
    <script src=@Url.Content("/Areas/Admin/Content/dist/js/sb-admin-2.js")></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>

</body>

</html>
